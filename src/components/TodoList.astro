---
const { todoList } = Astro.props;
---

<div class="todo-list-container">
  <h4>List</h4>

  <div class="todo-list">
    {
      todoList.map((list: string) => (
        <div class="task">
          <input type="checkbox" />
          <span>{list}</span>
        </div>
      ))
    }
  </div>
</div>

<style lang="scss">
  .todo-list-container {
    align-items: center;
    border-radius: 4px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 10px;
    width: 500px;
    background-color: #eee;
    border: 1px solid #999;

    h4 {
      margin: 0;
      padding-bottom: 20px;
    }

    .todo-list {
      list-style: none;
    }
  }
</style>
